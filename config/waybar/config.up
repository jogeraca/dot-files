//nvim: filetype=json
[
{
 "layer": "bottom",
 "output": "HDMI-A-1",
 "modules-left": ["sway/workspaces", "sway/mode", "sway/window"],
 "modules-right": [
    "battery", "clock", "tray"
  ],
 "sway/workspaces": {
    "format": "{name}: {icon}",
    "disable-scroll-wraparound": true,
    "enable-bar-scroll": true,
    "smooth-scrolling-threshold": 20,
    "format-icons": {
      "1": "",
      "2": "",
      "3": "",
      "4": "",
      "5": "",
      "urgent": "",
      "focused": "",
      "default": ""
    }
  },
},
{
  "layer": "bottom",
  "output": ["eDP-1", "DP-1"],
  "position": "top",
  "icon-size": 33,
  "height": 33,
  "modules-left": ["sway/workspaces", "sway/mode", "sway/window"],
  "modules-center": ["custom/time", "custom/weather"],
  "modules-right": [
    //"custom/lhtping",
    //"backlight",
    "pulseaudio",  "cpu", "memory",
    "network", "temperature", "sway/language",
    "battery", "clock", "tray", "idle_inhibitor"
  ],
  "sway/workspaces": {
    "format": "{name}: {icon}",
    "disable-scroll-wraparound": true,
    "enable-bar-scroll": true,
    "smooth-scrolling-threshold": 20,
    "format-icons": {
      "1": "",
      "2": "",
      "3": "",
      "4": "",
      "5": "",
      "urgent": "",
      "focused": "",
      "default": ""
    }
  },
  "sway/mode": {
    "format": "    {}"
  },
  "sway/window": {
    "format": "{}",
    "max-length": 50,
    "rewrite": {
       "(.*) - Mozilla Firefox": "🌎 $1",
       "(.*) - nvim": " $1",
       "(.*) - zsh": " [$1]"
    }
  },
  "custom/time": {
    "format": "{}",
    "interval": 5,
    "return-type": "json",
    "exec": "~/.config/waybar/modules/time.sh"
  },
  "custom/weather": {
        "format": "{}",
        "format-alt": "{alt}: {}",
        "format-alt-click": "click-right",
        "interval": 220,
        "return-type": "json",
        "exec": "~/.config/waybar/modules/weather.sh bogota"
  },
  "custom/lhtping": {
    "format": "{}",
    "interval": 33,
    "return-type": "json",
    "exec": "~/.config/waybar/modules/lht_ping.sh",
    "exec-if": "~/dot-files/bin/lht_ping | grep -v 1"
  },
  "pulseaudio": {
    "format": "{volume} {icon}",
    "format-alt": "{volume} {icon}",
    "format-alt-click": "click-right",
    "format-bluetooth": "{volume}% {icon}",
    "format-muted": "",
    "format-icons": {
      "phone": [" ", " ", " ", " "],
      "default": ["", "", "", ""]
    },
    "on-click": "pavucontrol",
    "scroll-step": 10,
    "tooltip": false
  },
  "cpu": {
    "format": "{usage}% ",
  },
  "memory":{
    "format": "{}% "
  },
  "clock": {
    "interval": 60,
    "format": "{:%d.%m.%y %a/W: %V}",
    "tooltip": false
  },
  "temperature": {
    "format": "{temperatureC}°C "
  },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["", ""]
    },
  "network": {
    "format-wifi": "{essid} ",
    "format-ethernet": "{ifname}: {ipaddr}/{cidr} ",
    "format-linked": "{ifname} (No IP) ",
    "format-disconnected": "Disconnected ⚠",
    "format-alt": "{ifname}: {ipaddr}/{cidr} {signalStrength}%",
    "format-icons": {
      "wifi": ["", "" ,""],
      "ethernet": [""],
      "disconnected": [""]
    },
    "on-click-middle": "kitty -e nmtui",
  },
  "sway/language": {
    "format": "{short} {variant}"
  },
  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
	  "critical": 15
	},
    "format": "{capacity}% {icon}",
    "interval": 60,
    "format-charging": "{capacity}% ",
    "format-icons": [ "", "", "", "", ""],
    "tooltip": false
  },
  "tray": {
    "icon-size": 15,
    "spacing": 5
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "",
      "deactivated": ""
    }
  }
}
]
